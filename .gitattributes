# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should use LF
*.sh text eol=lf

# Windows scripts use CRLF
*.ps1 text eol=crlf
*.bat text eol=crlf

# Source files
*.tsx text
*.ts text
*.jsx text
*.js text
*.json text
*.css text
*.html text
*.py text

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
